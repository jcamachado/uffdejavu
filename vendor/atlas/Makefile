ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

.PHONY: clean prebuild

SHELLTYPE := posix
ifeq ($(shell echo "test"), "test")
	SHELLTYPE := msdos
endif

# Configurations
# #############################################

ifeq ($(origin CC), default)
  CC = gcc
endif
ifeq ($(origin CXX), default)
  CXX = g++
endif
ifeq ($(origin AR), default)
  AR = ar
endif
RESCOMP = windres
FORCE_INCLUDE +=
ALL_CPPFLAGS += $(CPPFLAGS) -MD -MP $(DEFINES) $(INCLUDES)
ALL_RESFLAGS += $(RESFLAGS) $(DEFINES) $(INCLUDES)
LINKCMD = $(CXX) -o "$@" $(OBJECTS) $(RESOURCES) $(ALL_LDFLAGS) $(LIBS)
define PREBUILDCMDS
	@echo Running prebuild commands
	../../scripts/build_sfml.sh
endef
define PRELINKCMDS
endef
define POSTBUILDCMDS
endef

ifeq ($(config),debug)
TARGETDIR = bin/Debug
TARGET = $(TARGETDIR)/SpriteSheetGenerator
OBJDIR = bin/objectFiles/Debug
DEFINES += -DGENERATOR_VERSION=\"0.0.1\" -DSFML_STATIC -DDEBUG
INCLUDES += -I../sfml/include
ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -m64 -g -g -Og
ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -m64 -g -std=c++20 -g -Og
LIBS += -lsfml-graphics-s -lsfml-window-s -lsfml-system-s -lX11 -ldl -ludev -lpthread -lXrandr -lXcursor
LDDEPS +=
ALL_LDFLAGS += $(LDFLAGS) -L../sfml/build/lib -L/usr/lib64 -m64

else ifeq ($(config),release)
TARGETDIR = bin/Release
TARGET = $(TARGETDIR)/SpriteSheetGenerator
OBJDIR = bin/objectFiles/Release
DEFINES += -DGENERATOR_VERSION=\"0.0.1\" -DSFML_STATIC -DNDEBUG
INCLUDES += -I../sfml/include
ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -m64 -O2
ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -m64 -O2 -std=c++20
LIBS += -lsfml-graphics-s -lsfml-window-s -lsfml-system-s -lX11 -ldl -ludev -lpthread -lXrandr -lXcursor
LDDEPS +=
ALL_LDFLAGS += $(LDFLAGS) -L../sfml/build/lib -L/usr/lib64 -m64 -s

else ifeq ($(config),dist)
TARGETDIR = bin/Dist
TARGET = $(TARGETDIR)/SpriteSheetGenerator
OBJDIR = bin/objectFiles/Dist
DEFINES += -DGENERATOR_VERSION=\"0.0.1\" -DSFML_STATIC -DNDEBUG
INCLUDES += -I../sfml/include -I../vendor/shaderc/libshaderc/include
ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -m64 -O2
ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -m64 -O2 -std=c++20
LIBS += ../shaderc/bin/shaderc/libshaderc.a ../shaderc/bin/shaderc_util/libshaderc_util.a -lsfml-graphics-s -lsfml-window-s -lsfml-system-s -lX11 -ldl -ludev -lpthread -lXrandr -lXcursor
LDDEPS += ../shaderc/bin/shaderc/libshaderc.a ../shaderc/bin/shaderc_util/libshaderc_util.a
